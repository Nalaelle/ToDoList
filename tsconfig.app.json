{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "allowImportingTsExtensions": true, // ajout
    "emitDeclarationOnly": true, // ajout
    "moduleResolution": "bundler", // ajout
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
